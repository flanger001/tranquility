<% content_for :page_title, "A Sanctuary To Restore You" %>

<div class="announcements--text-center">
  <div class="announcement">
    <%= simple_format(Snippet[:announcement]) %>
  </div>

  <div class="landing-text">
    <%= simple_format(Snippet[:landing]) %>
  </div>
  <div class="site-logo">
    <%= image_tag(asset_pack_path("media/images/logos/desktop-new.png"), :class => "site-logo__image") %>
  </div>
  <hr />
  <div class="gifts__lead gifts">
    <p class="gifts">
      Gift certificates are available for all services and products.<br />
      <%= link_to "Purchase a Gift Certificate here!", "http://www.secure-booker.com/ATouchofTranquilitySpa/InstantGiftCertificate.aspx", :class => "cta-link" %>
    </p>
  </div>
  <hr />
  <div class="callouts">
    <div class="callouts__row">
      <div class="callouts__jumbotron">
        <%= render Review.random if Review.exists? %>
        <p class="callouts__lead reviews">
          Want to see what else our customers are saying about us?<br />
          <%= link_to "Click here!", reviews_path, :class => "cta-link" %>
        </p>
      </div>
    </div>
    <div class="callouts__row">
      <h1 class="callouts__text-center">
        Spa Hours
      </h1>
      <div class="center">
        <%= render "layouts/hours" %>
      </div>
    </div>
  </div>
</div>
