nav.header-container
  .site-header
    .logo
      = link_to image_tag('weblogo-desktop.png'), '/', class: 'hidden-xs hidden-sm visible-md visible-lg'
      = link_to image_tag('weblogo-mobile.png'), '/', class: 'visible-xs visible-sm hidden-md hidden-lg'
    .links.navigation
      - nav_links.each do |link|
        = link_to link.name, link.url
    .links.product
      - product_links.each do |link|
        = link_to link.name, link.url

