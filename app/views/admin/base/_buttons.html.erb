<div class="btn-toolbar">
  <% case action_name %>
  <% when "edit" %>
    <%= form.submit class: 'btn btn-success btn-lg' %>
    <%= link_to 'View', [:admin, resource], class: 'btn btn-default btn-lg' %>
    <%= link_to 'Cancel', polymorphic_path([:admin, resource.class]), class: 'btn btn-default btn-lg' %>
  <% when "new" %>
    <%= form.submit class: 'btn btn-success btn-lg' %>
    <%= link_to "All #{resource.class.to_s.titleize.pluralize}", polymorphic_path([:admin, resource_class]), class: 'btn btn-info btn-lg' %>
  <% when "index" %>
    <%= link_to "New #{resource_class.to_s.titleize}", new_polymorphic_path([:admin, resource_class]), class: 'btn btn-success btn-lg' %>
    <% if resource_class.instance_methods.include?(:active) %>
      <%= submit_tag "Update #{resource_class.to_s.titleize.pluralize}", class: 'btn btn-warning btn-lg' %>
    <% end %>
  <% when "show" %>
    <%= link_to 'Edit', edit_polymorphic_path([:admin, resource]), class: 'btn btn-default btn-lg' %>
    <%= link_to 'Back', polymorphic_path([:admin, resource.class]), class: 'btn btn-default btn-lg' %>
    <%= link_to "All #{resource_class.to_s.titleize.pluralize}", polymorphic_path([:admin, resource_class]), class: 'btn btn-info btn-lg' %>
  <% end %>
</div>

