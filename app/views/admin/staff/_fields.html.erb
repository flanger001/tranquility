<div class='admin__row'>
  <div class='admin--col-sm-4'>
    <div class='admin__form-group'>
      <%= form.label :first_name, :class => "admin__control-label" %>
      <%= form.text_field :first_name, :class => "admin__form-control" %>
    </div>
  </div>
  <div class='admin--col-sm-4'>
    <div class='admin__form-group'>
      <%= form.label :last_name, :class => "admin__control-label" %>
      <%= form.text_field :last_name, :class => "admin__form-control" %>
    </div>
  </div>
  <div class='admin--col-sm-4'>
    <div class='admin__form-group'>
      <%= form.label :credentials, :class => "admin__control-label" %>
      <%= form.text_field :credentials, :class => "admin__form-control" %>
    </div>
  </div>
</div>
<% if form.object.photo.present? %>
  <%= image_tag form.object.photo.thumb.url %>
  <div class='admin__checkbox'>
    <%= form.label :remove_photo do %><%= form.check_box :remove_photo %>
      Remove photo?
    <% end %>
  </div>
<% end %>
<div class='admin__row'>
  <div class='admin--col-sm-6'>
    <div class='admin__form-group'>
      <%= form.label :photo, "Upload photo", :class => "admin__control-label" %>
      <%= form.file_field :photo, :class => "admin__form-control" %>
    </div>
  </div>
  <div class='admin--col-sm-6'>
    <div class='admin__form-group'>
      <%= form.label :remote_photo_url, "Load from URL", :class => "admin__control-label" %>
      <%= form.text_field :remote_photo_url, :class => "admin__form-control" %>
    </div>
  </div>
</div>
<div class='admin__form-group'>
  <%= form.label :title, :class => "admin__control-label" %>
  <%= form.text_area :title, :rows => 6, :class => "admin__form-control" %>
</div>
<div class='admin__form-group'>
  <%= form.label :services, :class => "admin__control-label" %>
  <%= form.text_area :services, :rows => 6, :class => "admin__form-control" %>
</div>
<div class='admin__well'>
  <h2>Schedule</h2>
  <% form.object.build_schedule if form.object.schedule.blank? %>
  <%= form.fields_for :schedule do |schedule| %>
    <%= render "schedule_fields", :form => schedule %>
  <% end %>
</div>
<div class='admin__form-group'>
  <%= form.label :notes, :class => "admin__control-label" %>
  <%= form.text_area :notes, :rows => 3, :class => "admin__form-control" %>
</div>
<div class='admin__form-group'>
  <%= form.label :bio, :class => "admin__control-label" %>
  <%= form.text_area :bio, :rows => 10, :class => "admin__form-control" %>
</div>
