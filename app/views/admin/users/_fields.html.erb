<div class='admin__form-group'>
  <%= form.label :first_name, :class => "admin__control-label" %>
  <%= form.text_field :first_name, :class => "admin__form-control" %>
</div>
<div class='admin__form-group'>
  <%= form.label :last_name, :class => "admin__control-label" %>
  <%= form.text_field :last_name, :class => "admin__form-control" %>
</div>
<div class='admin__form-group'>
  <%= form.label :email, :class => "admin__control-label" %>
  <%= form.text_field :email, :class => "admin__form-control" %>
</div>
<div class='admin__form-group'>
  <div class='admin__checkbox'>
    <%= label_tag :change_password, :class => "change_password" do %>
      <%= check_box_tag :change_password, :class => "change_password" %>
      Change password?
    <% end %>
  </div>
</div>
<div class='password-form'>
  <div class='admin__form-group'>
    <%= form.label :password, :class => "admin__control-label" %>
    <%= form.password_field :password, :class => "admin__form-control" %>
  </div>
  <div class='admin__form-group'>
    <%= form.label :password_confirmation, :class => "admin__control-label" %>
    <%= form.password_field :password_confirmation, :class => "admin__form-control" %>
  </div>
</div>
