<div class='row'>
  <div class='col-sm-10'>
    <div class='form-group'>
      <%= form.label :product_id, class: 'control-label' %>
      <%= form.grouped_collection_select :product_id, Category.all, :products, :name, :id, :name, { include_blank: true }, class: 'form-control' %>
    </div>
  </div>
  <div class='col-sm-1'>
    <%= active_check_box(form) %>
  </div>
  <div class='col-sm-1'>
    <div class='form-group'>
      <%= form.label :rating, class: 'control-label' %>
      <%= form.select :rating, (1..5), {}, class: 'form-control' %>
    </div>
  </div>
</div>
<div class='row'>
  <div class='col-sm-11'>
    <div class='form-group'>
      <%= form.label :customer_name, class: 'control-label' %>
      <%= form.text_field :customer_name, class: 'form-control' %>
    </div>
  </div>
  <div class='col-sm-1'>
    <div class='form-group'>
      <%= form.label :show_customer_name, class: 'control-label' %>
      <%= form.check_box :show_customer_name, class: 'checkbox' %>
    </div>
  </div>
</div>
<div class='form-group'>
  <%= form.label :date, class: 'control-label' %>
  <%= form.date_field :date, class: 'form-control' %>
</div>
<div class='form-group'>
  <%= form.label :title, class: 'control-label' %>
  <%= form.text_field :title, class: 'form-control' %>
</div>
<div class='form-group'>
  <%= form.label :body, class: 'control-label' %>
  <%= form.text_area :body, rows: 4, class: 'form-control' %>
</div>
