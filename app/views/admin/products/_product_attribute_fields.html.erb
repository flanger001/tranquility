<div class='admin__row'>
  <div class='admin--col-sm-6'>
    <div class='admin__form-group'>
      <%= form.label :time, :class => "admin__control-label" %>
      <%= form.text_field :time, :class => "admin__form-control" %>
    </div>
  </div>
  <div class='admin--col-sm-5'>
    <div class='admin__form-group'>
      <%= form.label :price, :class => "admin__control-label" %>
      <%= form.text_field :price, :class => "admin__form-control" %>
    </div>
  </div>
</div>
<% unless form.object.new_record? %>
  <div class='admin--col-sm-1'>
    <div class='admin__form-group'>
      <%= form.label :_destroy, "Remove price/time?", :class => "admin__control-label" %>
      <%= form.check_box :_destroy, :class => "admin__checkbox" %>
    </div>
  </div>
<% end %>
